<% if @book.errors.any? %>
	<% @book.errors.full_messages.each do |error| %>
		<p>
			<%= error %>
		</p>
		<% end %>
<% end %>

<%= form_for [@author, @book] do |f| %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title, autofocus:true %>
	</div>
	<div>
		<%= f.label :description%>
		<%= f.text_field :description %>
	</div>
	<div>
  	<%= f.submit%>
</div>
<% end %>